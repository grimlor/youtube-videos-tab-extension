{
  "manifest_version": 3,
  "name": "YouTube Auto Videos Tab",
  "version": "1.0.0",
  "description": "Automatically navigates to the Videos tab when visiting YouTube channel pages",
  "permissions": [],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
